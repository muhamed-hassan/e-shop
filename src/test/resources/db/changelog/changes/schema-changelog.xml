<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
              xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet author="admin" id="adding_schema">

    <createTable tableName="category">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>
      <column name="name" type="varchar(150)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="active" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="int">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addDefaultValue columnDataType="bit(1)" columnName="active" defaultValueBoolean="true" tableName="category"/>
    <addDefaultValue columnDataType="int" columnName="version" defaultValueBoolean="true" tableName="category"/>

    <createTable tableName="vendor">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>
      <column name="name" type="varchar(150)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="active" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="int">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addDefaultValue columnDataType="bit(1)" columnName="active" defaultValueBoolean="true" tableName="vendor"/>
    <addDefaultValue columnDataType="int" columnName="version" defaultValueBoolean="true" tableName="vendor"/>

    <createTable tableName="role">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>
      <column name="name" type="varchar(150)">
        <constraints nullable="false" unique="true"/>
      </column>
    </createTable>

    <createTable tableName="user">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>
      <column name="name" type="varchar(150)">
        <constraints nullable="false"/>
      </column>
      <column name="user_name" type="varchar(150)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="password" type="varchar(150)">
        <constraints nullable="false"/>
      </column>
      <column name="address" type="varchar(500)">
      </column>
      <column name="phone" type="varchar(45)">
        <constraints unique="true"/>
      </column>
      <column name="email" type="varchar(150)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="active" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="role" type="int">
        <constraints nullable="false" foreignKeyName="role_fk" referencedTableName="role" referencedColumnNames="id"/>
      </column>
      <column name="account_non_expired" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="account_non_locked" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="credentials_non_expired" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="enabled" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="int">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addDefaultValue columnDataType="bit(1)" columnName="active" defaultValueBoolean="true" tableName="user"/>
    <addDefaultValue columnDataType="int" columnName="role" defaultValue="1" tableName="user"/>
    <addDefaultValue columnDataType="bit(1)" columnName="account_non_expired" defaultValueBoolean="true" tableName="user"/>
    <addDefaultValue columnDataType="bit(1)" columnName="account_non_locked" defaultValueBoolean="true" tableName="user"/>
    <addDefaultValue columnDataType="bit(1)" columnName="credentials_non_expired" defaultValueBoolean="true" tableName="user"/>
    <addDefaultValue columnDataType="bit(1)" columnName="enabled" defaultValueBoolean="true" tableName="user"/>
    <addDefaultValue columnDataType="int" columnName="version" defaultValueBoolean="true" tableName="user"/>

    <createTable tableName="product">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>
      <column name="name" type="varchar(150)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="image" type="mediumblob">
      </column>
      <column name="price" type="double">
        <constraints nullable="false"/>
      </column>
      <column name="quantity" type="int">
        <constraints nullable="false"/>
      </column>
      <column name="description" type="varchar(1000)">
      </column>
      <column name="active" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="vendor" type="int">
        <constraints nullable="false" foreignKeyName="vendor_fk" referencedTableName="vendor" referencedColumnNames="id"/>
      </column>
      <column name="category" type="int">
        <constraints nullable="false" foreignKeyName="category_fk" referencedTableName="category" referencedColumnNames="id"/>
      </column>
      <column name="image_uploaded" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="int">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addDefaultValue columnDataType="bit(1)" columnName="active" defaultValueBoolean="true" tableName="product"/>
    <addDefaultValue columnDataType="int" columnName="version" defaultValueBoolean="true" tableName="product"/>

  </changeSet>

</databaseChangeLog>

