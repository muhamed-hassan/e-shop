<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet author="admin" id="4">

    <addColumn tableName="user">
      <column name="account_non_expired" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="account_non_locked" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="credentials_non_expired" type="bit(1)">
        <constraints nullable="false"/>
      </column>
      <column name="enabled" type="bit(1)">
        <constraints nullable="false"/>
      </column>
    </addColumn>
    <addDefaultValue columnDataType="bit(1)" columnName="account_non_expired" defaultValueBoolean="true" tableName="user"/>
    <addDefaultValue columnDataType="bit(1)" columnName="account_non_locked" defaultValueBoolean="true" tableName="user"/>
    <addDefaultValue columnDataType="bit(1)" columnName="credentials_non_expired" defaultValueBoolean="true" tableName="user"/>
    <addDefaultValue columnDataType="bit(1)" columnName="enabled" defaultValueBoolean="true" tableName="user"/>

  </changeSet>

</databaseChangeLog>

